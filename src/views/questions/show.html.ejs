<h1>Pregunta #<%= question.id %></h1>

<p>
    <%= question.content %>
</p>

<ul>
    <% if (isOwnerOrAdmin) { %>
      <li><a href="<%= editQuestionPath %>">Editar</a></li>
      <li>
        <form action="<%= deleteQuestionPath %>" method="post">
          <input type="hidden" name="_method" value="delete" />
          <div>
            <input type="submit" name="delete" value="Eliminar" />
          </div>
        </form>
      </li>
    <% } %>
    <li><a href="<%= backToListPath %>">Volver</a></li>
</ul>

<% if (currentUser) { %>
  <form action="<%= createCommentPath %>" method="post">
    <input type="hidden" name="questionId" value="<%= question.id %>" />
    <input type="hidden" name="userId" value="<%= currentUser.id %>" />
    <input type="hidden" name="returnPath" value="<%= returnPath %>" />
    <div>
      <label for="content">Tu respuesta:</label>
      <textarea name="content" id="content"></textarea>
    </div>
    <div>
      <input type="submit" name="answer" value="Responder" />
    </div>
  </form>
<% } %>

<% if (comments.length > 0) { %>
  Respuestas:
  <ul>
    <% comments.forEach(comment => { %>
      <li>
        <%=  comment.user.username + ' => ' + comment.content %>
        <br />
      </li>
    <% }) %>
  </ul>
<% } %>
