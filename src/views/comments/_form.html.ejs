<form method="POST" action="<%= submitCommentPath %>">
  <%if (!comment.isNewRecord) { %>
    <input type="hidden" name="_method" value="patch" />
  <% }%>
  <div>
    <label for="userId">Id del usuario:</label>
    <textarea name="userId" id="userId"><%= comment.userId %></textarea>
  </div>
  <div>
    <label for="content">Contenido</label>
    <textarea name="content" id="content"><%= comment.content %></textarea>
  </div>
  <div>
    <button type="submit">
      <%if (comment.isNewRecord) { %>
        Crear
      <% } else { %>
        Actualizar
      <% } %>
    </button>
  </div>
</form>
