<h1>Guia #<%= guide.id %></h1>

<p>
    <%= guide.title %>
</p>

<ul>
  <% if (isOwnerOrAdmin) { %>
    <li><a href="<%= editGuidePath %>">Editar</a></li>
    <li>
      <form action="<%= deleteGuidePath %>" method="post">
        <input type="hidden" name="_method" value="delete" />
        <div>
          <input type="submit" name="delete" value="Eliminar" />
        </div>
      </form>
    </li>
  <% } %>
    <li><a href="<%= backToListPath %>">Volver</a></li>
</ul>

<% if (isAdmin) { %>
  <form action="<%= createTagPath %>" method="post">
    <input type="hidden" name="guideId" value="<%= guide.id %>" />
    <input type="hidden" name="returnPath" value="<%= returnPath %>" />
    <div>
      <label for="name">Nuevo Tag:</label>
      <textarea name="name" id="name"></textarea>
      <input type="submit" name="answer" value="Crear Tag" />
    </div>
  </form>
<% } %>

<% if (tags.length > 0) { %>
  Tags:
  <ul>
    <% tags.forEach(tag => { %>
      <li class="in-line">
        <%= '  ' + tag.name %>
        <% if (isAdmin) { %>
          <span style="display: inline">
            <form action="<%= buildTagDeletePath(tag.id) %>" method="post">
              <input type="hidden" name="_method" value="delete" />
              <input type="hidden" name="returnPath" value="<%= returnPath %>" />
              <div>
                <input type="submit" name="delete" value="Eliminar" />
              </div>
            </form>
          </span>
        <% } %>
        <br />
      </li>
    <% }) %>
  </ul>
<% } %>

